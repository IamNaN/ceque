<%= form_for([:ceque, @conversation, @conversation.messages.new], remote: false, html: {class: 'px-4'} ) do |f| %>
  <div class='editor'>
    <div class='editor-content'>
      <%= f.text_field :content, class: 'form-control', placeholder: 'Type your message here...', autofocus: :autofocus %>
    </div>
    <div class='editor-controls'>
      <%= f.submit "Send", disable_with: 'Sending...', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>