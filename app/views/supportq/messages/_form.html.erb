<%= form_for([:supportq, @conversation, @message], remote: false, html: {class: 'px-4'} ) do |f| %>
  <div class='form-row'>
    <div class='col-11'>
      <%= f.text_field :content, class: 'form-control', placeholder: 'Type your message here...' %>
    </div>
    <div class='col-1'>
      <%= f.submit "Send", disable_with: 'Sending...', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>